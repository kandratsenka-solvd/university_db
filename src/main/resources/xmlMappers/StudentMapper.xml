<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.IStudentMapper">

    <insert id="add" useGeneratedKeys="true" keyColumn="student_id" keyProperty="studentId">
        INSERT INTO student (person_id, edu_group_id)
        VALUES (#{personId}, #{eduGroupId})
    </insert>

    <select id="getById" resultMap="studentResultMap">
        SELECT *
        FROM student
        WHERE student_id = #{studentId}
    </select>

    <select id="getGeneratedKey" resultType="int">
        SELECT LAST_INSERT_ID()
    </select>

    <select id="getAll" resultMap="studentResultMap">
        SELECT *
        FROM student
    </select>

    <resultMap id="studentResultMap" type="models.Student">
        <id property="studentId" column="student_id" />
        <result property="personId" column="person_id" />
        <result property="eduGroupId" column="edu_group_id" />
    </resultMap>

    <update id="updateById">
        UPDATE student
           SET person_id = #{personId},
               edu_group_id = #{eduGroupId}
         WHERE student_id = #{studentId}
    </update>

    <delete id="deleteById">
        DELETE
        FROM student
        WHERE student_id = #{studentId}
    </delete>

</mapper>
